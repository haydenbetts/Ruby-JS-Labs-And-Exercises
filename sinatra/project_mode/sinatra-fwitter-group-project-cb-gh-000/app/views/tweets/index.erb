<h2> All of the tweets! </h2>

<div class ="row">
  <div class="col-sm-6">
    <div class="tweets">
      <% @tweets.each do |tweet| %>

        <div class ="tweet">
            <div class ="content">
              <%= tweet.user.name %><br>
              <%= tweet.insert_break_points %><br>
            </div>
        </div>

      <% end %>
    </div>
 </div> <!-- end of col-sm-12 div -->
</div> <!-- end of row div -->
