<h1>Create a new Pet</h1>

<form action="/pets" method="POST">

  <!-- add pet name -->
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name">

  <br></br>

  <!-- select from a list of available owners -->
  <label>Owner:</label>

  <% @owners.each do |owner| %>

    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%= owner.id%>"><%=owner.name%></input>

  <% end %>

  <br></br>

  <!-- add a new owner -->

  <label>Create a new owner for your pet:</label>
  <input type="text" name="owner[name]" id="owner_name"></input>


  <br></br>

  <!-- submit -->


  <input type="submit" value="Create Pet">
</form>
